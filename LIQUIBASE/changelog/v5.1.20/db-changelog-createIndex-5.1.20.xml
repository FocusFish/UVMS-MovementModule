<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
                   logicalFilePath="changelog/v5.1.20/db-changelog-createIndex-5.1.20.xml">

    <changeSet author="joemat" id="Add an index on the movement table to improve the query time for counting the amounts of movement for a ship in a single day">

        <createIndex indexName="movement_count_idx" tableName="movement">
            <column name="move_moveconn_id"/>
            <column name="move_timestamp" descending="true"/>
            <column name="move_duplicate"/>
        </createIndex>

    </changeSet>


</databaseChangeLog>